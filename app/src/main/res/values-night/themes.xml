<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstAndroidApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorBackground">@color/maroon</item>
        <item name="android:strokeColor">@color/white</item>
        <item name="android:shadowColor">@color/shadow_purple</item>

        <item name="android:iconTint">@color/black</item>
        <item name="android:iconTintMode">@color/white</item>
        <item name="android:buttonTint">@color/peach</item>
        <item name="android:colorPressedHighlight">@color/peach</item>
        <item name="android:colorLongPressedHighlight">@color/shadow_peach</item>

        <item name="android:itemBackground">@color/shadow_purple</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/shadow_purple</item>
        <item name="android:background">@color/shadow_purple</item>
        <item name="android:backgroundTint">@color/shadow_purple</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>