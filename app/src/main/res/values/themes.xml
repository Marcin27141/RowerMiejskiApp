<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstAndroidApp" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_grotto</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/pink</item>
        <item name="android:colorBackground">@color/cyan</item>
        <item name="android:strokeColor">@color/red</item>
        <item name="android:shadowColor">@color/shadow_cyan</item>

        <item name="android:iconTint">@color/black</item>
        <item name="android:iconTintMode">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
        <item name="android:colorPressedHighlight">@color/purple</item>
        <item name="android:colorLongPressedHighlight">@color/shadow_purple</item>
    </style>

    <style name="Theme.FirstAndroidApp" parent="Base.Theme.FirstAndroidApp"/>

    <style name="ToggleButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/shadow_cyan</item>
        <item name="android:background">@color/shadow_cyan</item>
        <item name="android:backgroundTint">@color/shadow_cyan</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>